#!/bin/bash

#   Script for updating dwm's status bar

append() {
    name="${name:+$name} $1"
}

uptime=$(uptime -p)
time=$(date '+%x %R')
weekday_name=$(date '+%A')
weekday_name=${weekday_name^}

volume=$(pamixer --get-volume-human)

batcap=$(cat /sys/class/power_supply/BAT0/capacity)
batstat=$(cat /sys/class/power_supply/BAT0/status)

append " ${volume}"
append "│"

case $(( batcap / 10 )) in
	0)  append "󰂎" ;;
	1)  append "󰁺" ;;
	2)  append "󰁻" ;;
	3)  append "󰁼" ;;
	4)  append "󰁽" ;;
	5)  append "󰁾" ;;
	6)  append "󰁿" ;;
	7)  append "󰂀" ;;
	8)  append "󰂁" ;;
	9)  append "󰂂" ;;
	10) append "󰁹" ;;
esac

case $batstat in
	"Not charging") append "" ;;
	"Discharging") append "󰜮" ;;
	"Charging") append "󰜷" ;;
	"Full") ;;
	*) append "$batstat" ;;
esac

append "$batcap%"
append "|"
append "󰃞 $(light)"
append "|"
append " $uptime"
append "│"
append "$time $weekday_name"

xsetroot -name "$name "

